load("@py_deps_buildkite//:requirements.bzl", ci_require = "requirement")

py_library(
    name = "raydepsets_lib",
    srcs = [
        "cli.py",
        "workspace.py",
    ],
    deps = [
        ci_require("click"),
        ci_require("pyyaml"),
    ],
)

py_binary(
    name = "raydepsets",
    srcs = ["raydepsets.py"],
    deps = [":raydepsets_lib"],
    exec_compatible_with = ["//:hermetic_python"],
)

py_test(
    name = "test_cli",
    srcs = ["test_cli.py"],
    data = ["test_data/test.config.yaml"],
    exec_compatible_with = ["//:hermetic_python"],
    deps = [
        ci_require("pytest"),
        ci_require("bazel-runfiles"),
        ":raydepsets_lib",
    ],
    tags = [
        "ci_unit",
        "team:ci",
    ],
)
